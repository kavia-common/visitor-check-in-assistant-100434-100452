# Backend config: Visitor Management

# --- PostgreSQL ---
POSTGRES_USER=youruser
POSTGRES_PASSWORD=yourpass
POSTGRES_DB=yourdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# --- Frontend CORS (required for development) ---
FRONTEND_URL=http://localhost:3000

# --- SMTP Email Notification Settings ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=youruser@example.com
SMTP_PASS=yourpassword
SMTP_FROM=youruser@example.com
SMTP_USE_TLS=true

# --- Twilio SMS Notification Settings ---
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890

# --- Webhook Notification (optional) ---
NOTIFY_WEBHOOK_URL=https://hooks.example.com/notify

# If not using a service, leave value blank.
